<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Alert Box</title>
    <link rel="stylesheet" href="css/bootstrap.min.css">
</head>
<body style="color: blue;">
    
  <!-- navbar start -->

  <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
      <div class="container">
        <a  style="color: blue;"class="navbar-brand" href="#">Alert Box</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
          <ul class="navbar-nav ml-auto">
            <li class="nav-item ">
              <a class="nav-link" href="/">Home <span class="sr-only">(current)</span></a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/login">Login</a>
            </li>
            <li class="nav-item active">
              <a  style="color: blue;"class="nav-link" href="/signup">Signup</a>
            </li>
          </ul>
        </div>
      </div>
  </nav>

  <!-- navbar end -->
  <!-- card start  -->
  <div class="container">
      <div class="row">
          <div class="col-lg-6 offset-lg-3 offset-md-2 col-md-8">
            <form action="/signup" method="POST">
              <h1 class="text-center">SIGNUP HERE</h1>
                <div class="form-group">
                  <label for="exampleInputEmail1">Email address</label>
                  <input type="email" class="form-control" name="email" id="exampleInputEmail1" aria-describedby="emailHelp">
                  <small id="emailHelp" class="form-text text-muted"><h6 style="color:orange;">We'll never share your email with anyone else.</h6></small>
                </div>
                <div class="form-group">
                  <label for="exampleInputPassword1">Password</label>
                  <input type="password" name="password" class="form-control" id="exampleInputPassword1">
                </div>
                <div class="form-group">
                  <label for="select">Student / employee</label>
                  <select class="form-control" name="category" onchange="showCategories()" id="select">
                    <option>Student</option>
                    <option>Employee</option>
                  </select>
                </div>
                <div class="form-group" id="category">
                  <label for="category">Employee category</label>
                  <select class="form-control" name="profession">
                    <option>Hostel warden</option>
                    <option>Principal</option>
                    <option>Security</option>
                    <option>Procters</option>
                  </select>
                </div>
                <div class="form-group">
                    <label for="exampleInputPassword1">Mobile</label>
                    <input type="tel" name="phone" class="form-control" id="exampleInputPassword1">
                  </div>
                  <div class="form-group">
                    <label for="exampleInputPassword1">Username</label>
                    <input type="text" name="username" class="form-control" id="exampleInputPassword1">
                  </div>
                <input type="submit" class="btn btn-primary" >
              </form>
          </div>
      </div>
  </div>
  <!-- card end  -->

    <script src="./js/jquery.min.js"></script>
    <script src="./js/bootstrap.min.js"></script>
    <script>
      function showCategories(){
        var select =  document.getElementById('select').value
        if(select === "Student"){
          document.getElementById('category').style.display = "none"
        }else{
          document.getElementById('category').style.display = "block"
        }
      }
      showCategories()
    </script>
</body>
</html>